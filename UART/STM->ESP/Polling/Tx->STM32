    Error_Handler();
  }
  /* USER CODE BEGIN CRC_Init 2 */

  /* USER CODE END CRC_Init 2 */

}

/**
  * @brief UART4 Initialization Function
  * @param None
  * @retval None
  */
static void MX_UART4_Init(void)
{

  /* USER CODE BEGIN UART4_Init 0 */

  /* USER CODE END UART4_Init 0 */

  /* USER CODE BEGIN UART4_Init 1 */

  /* USER CODE END UART4_Init 1 */
  huart4.Instance = UART4;
  huart4.Init.BaudRate = 115200;
  huart4.Init.WordLength = UART_WORDLENGTH_8B;
  huart4.Init.StopBits = UART_STOPBITS_1;
  huart4.Init.Parity = UART_PARITY_NONE;
  huart4.Init.Mode = UART_MODE_TX_RX;
  huart4.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart4.Init.OverSampling = UART_OVERSAMPLING_16;
  if (HAL_UART_Init(&huart4) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN UART4_Init 2 */

  /* USER CODE END UART4_Init 2 */

}

/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  /* USER CODE BEGIN MX_GPIO_Init_1 */

  /* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOD_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOD, GPIO_PIN_13|GPIO_PIN_15, GPIO_PIN_RESET);

  /*Configure GPIO pins : PD13 PD15 */
  GPIO_InitStruct.Pin = GPIO_PIN_13|GPIO_PIN_15;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOD, &GPIO_InitStruct);

  /* USER CODE BEGIN MX_GPIO_Init_2 */

  /* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */

static void DWT_Init(void){
    CoreDebug->DEMCR |= CoreDebug_DEMCR_TRCENA_Msk;     /* Enable the DWT unit */
    DWT->CYCCNT = 0;     								/* Reset the cycle counter */
    DWT->CTRL |= DWT_CTRL_CYCCNTENA_Msk; 				/* Enable the cycle counter */
}

static uint32_t DWT_GetCycles(void){
	return DWT->CYCCNT;									/* Return the cycle counter */
}

static void fillPacket (dataPacket_t *packet){

	packet->start_of_frame = 0x55AA;

	packet->length_of_frame = TOTAL_PACKET_SIZE;

	payloadFill(packet->payload, PAYLOAD_SIZE);

	uint32_t data_length_bytes = sizeof(packet->length_of_frame) + sizeof(packet->payload); // 1016 bytes
	uint32_t data_length_words = data_length_bytes / 4; // 254 words

	uint32_t temp_words[data_length_words];

	memcpy(temp_words, &packet->length_of_frame, data_length_bytes);

	__HAL_CRC_DR_RESET(&hcrc);

    uint32_t calculated_crc =  HAL_CRC_Calculate(&hcrc, temp_words, data_length_words);

	packet->crc32_checksum = calculated_crc;

	packet->end_of_frame = 0xAAFF;

}

static void payloadFill(uint8_t *payload, uint16_t size){
	for(int i=0; i<size; i++){
		payload[i] = i & 0xFF;
	}
}

static void testThroughput(void){
	  DWT->CYCCNT = 0;
	  startCount = DWT_GetCycles();
	  HAL_UART_Transmit(&huart4, (uint8_t *)&packet, sizeof(dataPacket_t), 2000);
	  while(HAL_UART_GetState(&huart4)!=HAL_UART_STATE_READY);
	  endCount = DWT_GetCycles();

	  time = (float)(endCount - startCount)/SystemCoreClock;

	  throughput_Mbps = ((float)sizeof(dataPacket_t) * 8.0f)/(time);
	  HAL_Delay(3000);
}

static void testLatency(void){

	startCount = DWT_GetCycles();

	char txBuff[PACKET_SIZE];
	payloadFill((uint8_t *)txBuff, PACKET_SIZE);

	char rxBuff[PACKET_SIZE] = {0};

	HAL_UART_Transmit(&huart4, (uint8_t *)txBuff, sizeof(txBuff), 10);
	while(HAL_UART_GetState(&huart4)!=HAL_UART_STATE_READY);
	HAL_UART_Receive(&huart4, (uint8_t *)rxBuff, sizeof(rxBuff), 10);
	while(HAL_UART_GetState(&huart4)!=HAL_UART_STATE_READY);
	endCount = DWT_GetCycles();

	if(strcmp(txBuff, rxBuff)!=0){
		echoMismatch++;
	}
	memset(rxBuff, 0, sizeof(char)*PACKET_SIZE);
	roundTripTime = ((float)(endCount - startCount)/SystemCoreClock)*10e5;

	latency = roundTripTime/2;

	info[count].roundTripTime = roundTripTime;
	info[count].latency = latency;
	count++;
	if(count == MAX_TEST){
		minLatency = info[0].latency;
		maxLatency = info[0].latency;
		avgLatency = info[0].latency;
		for(int i=1; i<MAX_TEST; i++){
			avgLatency +=  info[i].latency;
			if(minLatency>info[i].latency){
				minLatency = info[i].latency;
			}
			if(maxLatency<info[i].latency){
				maxLatency = info[i].latency;
			}
		}
		avgLatency /= MAX_TEST;
		jitter = maxLatency - minLatency;
	}
	HAL_Delay(3000);
}

